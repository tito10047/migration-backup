{
  "name": "tito10047/migration-backup",
  "type": "symfony-bundle",
  "license": "MIT",
  "description": "Backup database on migrate command",
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "doctrine/doctrine-bundle": "^2.12",
    "doctrine/doctrine-migrations-bundle": "^3.4",
    "doctrine/orm": "^2.19|^3.1.0"

  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/framework-bundle": "^6.4|^7",
    "symfony/phpunit-bridge": "^7.1",
    "symfony/dotenv": "^6.4|^7",
    "symfony/yaml": "^6.4|^7"

  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Tito10047\\MigrationBackup\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tito10047\\MigrationBackup\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit --display-warnings --display-skipped --display-deprecations --display-errors --display-notices"
  }
}
